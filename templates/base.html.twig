            .product {
                transition: none;
                background-color: transparent;
                margin-bottom: 2rem;
            }
            .product:hover {
                box-shadow: none;
            }
            .product-content:hover {
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            }
            .product-details-top {
                margin-bottom: 1rem;
                background-color: #fff;
                padding: 20px;
            }
            .product-details-tab {
                margin-bottom: 5rem;
                background-color: #fff;
                padding: 20px;
                margin: 10px;
            }
            .header-middle .menu > li > a {
                font-size: 1.6rem !important;
                font-weight: 400;
                letter-spacing: 0;
