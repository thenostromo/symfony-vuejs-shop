                    .footer {
                        padding-left: 15rem;
                    }
                    .widget-list li {
                        display: inline;
                        margin-right: 5px;
                        font-size: 1.8rem;
                    }
                    .widget-list li:after {
                        content: " \00b7";
                        font-weight: 700;
                        vertical-align: middle;
                        padding: 0 10px;
                    }
                    .widget-list li:last-child:after {
                        content: none;
                    }
                    .footer .widget-title {
                        font-size: 2rem;
                    }
                </style>
                <footer class="footer footer-2">
