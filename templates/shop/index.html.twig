{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}
{% block page_keywords %}Jeans, Ranked Choice Homepage, Jackets{% endblock %}
{% block page_description %}Main page of RankedChoice shop!{% endblock %}

{% block body %}
    <div class="container-fluid mt-2">
        <div class="row">
            <div class="col-lg-6">
                <div class="banner banner-big banner-overlay">
                    <a href="{{ path('category_show', {slug: 'jeans'}) }}">
                        <img src="{{ asset('assets/images/banner/collection/banner_1.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content banner-content-center">
                        <h3 class="banner-subtitle text-white">New Collection 2020!</h3>
                        <h2 class="banner-title text-white">Jeans</h2>
                        <a href="{{ path('category_show', {slug: 'jeans'}) }}" class="btn banner-link">Show me</a>
                    </div><!-- End .banner-content -->
                </div><!-- End .banner -->
            </div><!-- End .col-lg-6 -->

            <div class="col-lg-6">
                <div class="banner banner-big banner-overlay">
                    <a href="{{ path('category_show', {slug: 'jackets'}) }}">
                        <img src="{{ asset('assets/images/banner/collection/banner_2.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content banner-content-center">
                        <h3 class="banner-subtitle text-white">Discounts Over 50%</h3>
                        <h2 class="banner-title text-white">Jackets</h2>
                        <a href="{{ path('category_show', {slug: 'jackets'}) }}" class="btn banner-link"><span>Show me</span></a>
                    </div><!-- End .banner-content -->
                </div><!-- End .banner -->
            </div><!-- End .col-lg-6 -->
        </div><!-- End .row -->

        <div class="row justify-content-center align-items-center">
            <div class="col-md-6 col-lg-4">
                <div class="banner banner-middle text-white">
                    <a href="{{ path('category_show', {slug: 'hats'}) }}">
                        <img src="{{ asset('assets/images/banner/collection/banner_3.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content banner-content-center">
                        <h3 class="banner-subtitle text-white">Unique!</h3>
                        <a href="{{ path('category_show', {slug: 'hats'}) }}" class="btn banner-link">Hats</a>
                    </div><!-- End .banner-content -->
                </div><!-- End .banner -->
            </div><!-- End .col-lg-4 -->

            <div class="col-md-6 col-lg-4">
                <div class="banner banner-middle text-white">
                    <a href="{{ path('category_show', {slug: 'dresses'}) }}">
                        <img src="{{ asset('assets/images/banner/collection/banner_4.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content banner-content-center">
                        <h3 class="banner-subtitle text-white">Fashionable!</h3>
                        <a href="{{ path('category_show', {slug: 'dresses'}) }}" class="btn banner-link">Dresses</a>
                    </div><!-- End .banner-content -->
                </div><!-- End .banner -->
            </div><!-- End .col-lg-4 -->

            <div class="col-md-6 col-lg-4">
                <div class="banner banner-middle text-white">
                    <a href="{{ path('category_show', {slug: 'sneakers'}) }}">
                        <img src="{{ asset('assets/images/banner/collection/banner_5.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content banner-content-center">
                        <h3 class="banner-subtitle text-white">Branded!</h3>
                        <a href="{{ path('category_show', {slug: 'sneakers'}) }}" class="btn banner-link">Sneakers</a>
                    </div><!-- End .banner-content -->
                </div><!-- End .banner -->
            </div><!-- End .col-lg-4 -->
        </div><!-- End .row -->
    </div><!-- End .container-fluid -->

    <div class="bg-light-2 pt-6 pb-6 featured">
        <div class="container-fluid">
            <div class="heading heading-center mb-3">
                <h2 class="title">We recommend</h2><!-- End .title -->
            </div><!-- End .heading -->

            <div class="row">
                <div class="col-lg-12">
                    {{ render(controller('App\\Controller\\EmbedController::similarProducts', {
                        'count': 6,
                    })) }}
                </div><!-- End .col-lg-9 -->
            </div><!-- End .tab-content -->
        </div><!-- End .container-fluid -->
    </div><!-- End .bg-light-2 pt-4 pb-4 -->
{% endblock %}
