{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}Edit Category{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                {% include 'admin/embed/card/_breadcrumbs.html.twig' with {
                    'sectionTitle': 'Categories',
                    'actionUrl': path('admin_category_list'),
                    'entity': category
                } %}
            </div>
            <div class="card-body">
                {{ form_start(categoryEditForm) }}
                    <div class="form-group row">
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            <div style="display: flex; align-items: center;">
                                {{ form_label(categoryEditForm.title) }}
                                {{ form_widget(categoryEditForm.title, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'title'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            <div style="display: flex; align-items: center;">
                                {{ form_label(categoryEditForm.slug) }}
                                {{ form_widget(categoryEditForm.slug, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'slug'}}) }}
                            </div>
                        </div>
                    </div>
                    <hr/>
                    {% include 'admin/embed/card/_form_buttons.html.twig' with {
                        'entity': category
                    }  %}
                {{ form_end(categoryEditForm) }}
            </div>
        </div>

    </div>

    {% if category.id %}
        {% include 'admin/embed/utils/_modal.html.twig' with {
            'id': 'approveDeleteModal',
            'title': 'Are you sure?',
            'text': 'Category will be deleted. All products of this category will be hide.',
            'actionUrl': path('admin_category_delete', {'id': category.id}),
            'btnText': 'Delete row'
        } %}
    {% endif %}
{% endblock %}
