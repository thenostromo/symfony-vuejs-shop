{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}Edit Category{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                {% include 'admin/embed/card/_breadcrumbs.html.twig' with {
                    'sectionTitle': 'Categories',
                    'actionUrl': path('admin_category_list'),
                    'entity': category
                } %}
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group row">
                        <div class="col-md-1">
                            {{ form_label(form.title) }}
                        </div>
                        <div class="col-md-11">
                            {{ form_widget(form.title) }}
                            <div class="form-error">
                                {{ form_errors(form.title) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1">
                            {{ form_label(form.slug) }}
                        </div>
                        <div class="col-md-11">
                            {{ form_widget(form.slug) }}
                            <div class="form-error">
                                {{ form_errors(form.slug) }}
                            </div>
                        </div>
                    </div>
                    <hr/>
                    {% include 'admin/embed/card/_form_buttons.html.twig' with {
                        'entity': category
                    }  %}
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>

    </div>

    {% if category.id %}
        {% include 'admin/embed/utils/_modal.html.twig' with {
            'id': 'approveDeleteModal',
            'title': 'Are you sure?',
            'text': 'Category will be deleted. All products of this category will be hide.',
            'actionUrl': path('admin_category_delete', {'id': category.id}),
            'btnText': 'Delete row'
        } %}
    {% endif %}
{% endblock %}
