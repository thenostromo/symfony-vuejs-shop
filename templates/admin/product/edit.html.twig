{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}Edit Product{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                {% include 'admin/embed/card/_breadcrumbs.html.twig' with {
                    'sectionTitle': 'Products',
                    'actionUrl': path('admin_product_list'),
                    'entity': product
                } %}
            </div>
            <div class="card-body">
                {{ form_start(productEditForm) }}
                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; align-items: center;">
                            {{ form_label(productEditForm.title) }}
                            {{ form_widget(productEditForm.title, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'title'}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; align-items: center;">
                            {{ form_label(productEditForm.price) }}
                            {{ form_widget(productEditForm.price, {'attr': {
                                'class': 'form-control',
                                'placeholder': 10}}) }}
                        </div>
                    </div>
                </div>

                {% if images|length %}
                    <div class="form-group row">
                        <div class="col-sm-12 mb-sm-0">
                            <span class="text-gray-600">Current cover</span>
                            {% for image in images %}
                                <img src="{{ asset('uploads/images/products/' ~ product.id ~ '/' ~ image) }}" alt="{{ image }}">
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; align-items: center;">
                            {{ form_label(productEditForm.cover) }}
                            {{ form_widget(productEditForm.cover, {'attr': {
                                'class': 'form-control-file'}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; align-items: center;">
                            {{ form_label(productEditForm.quantity) }}
                            {{ form_widget(productEditForm.quantity, {'attr': {
                                'class': 'form-control',
                                'placeholder': 1}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; align-items: center;">
                            {{ form_label(productEditForm.description) }}
                            {{ form_widget(productEditForm.description, {'attr': {
                                'class': 'form-control',
                                'style': 'overflow: hidden;'}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; align-items: center;">
                            {{ form_label(productEditForm.size) }}
                            {{ form_widget(productEditForm.size, {'attr': {
                                'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; align-items: center;">
                            {{ form_label(productEditForm.category) }}
                            {{ form_widget(productEditForm.category, {'attr': {
                                'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; padding-left: 1.25rem;">
                            {{ form_widget(productEditForm.isHidden, {'attr': {
                                'class': 'form-check-input' }}) }}
                            {{ form_label(productEditForm.isHidden, null, {'label_attr': {
                                'class': 'form-check-label'
                            }}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <div style="display: flex; padding-left: 1.25rem;">
                            {{ form_widget(productEditForm.isDeleted, {'attr': {
                                'class': 'form-check-input' }}) }}
                            {{ form_label(productEditForm.isDeleted, null, {'label_attr': {
                                'class': 'form-check-label'
                            }}) }}
                        </div>
                    </div>
                </div>
                <hr/>
                {% include 'admin/embed/card/_form_buttons.html.twig' with {
                    'entity': product
                }  %}
                {{ form_end(productEditForm) }}
            </div>
        </div>

    </div>

    {% if product %}
        {% include 'admin/embed/utils/_modal.html.twig' with {
            'id': 'approveDeleteModal',
            'title': 'Are you sure?',
            'text': 'Product will be deleted.',
            'actionUrl': path('admin_product_delete', {'id': product.id}),
            'btnText': 'Delete row'
        } %}
    {% endif %}
{% endblock %}
