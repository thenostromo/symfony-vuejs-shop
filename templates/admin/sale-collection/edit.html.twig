{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}Edit Sale Collection{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('appAdminSaleCollection') }}
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                {% include 'admin/embed/card/_breadcrumbs.html.twig' with {
                    'sectionTitle': 'Sale Collections',
                    'actionUrl': path('admin_sale_collection_list'),
                    'entity': saleCollection
                } %}
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group row">
                        <div class="col-md-1">
                            {{ form_label(form.title) }}
                        </div>
                        <div class="col-md-11">
                            {{ form_widget(form.title) }}
                            <div class="form-error">
                                {{ form_errors(form.title) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1">
                            {{ form_label(form.description) }}
                        </div>
                        <div class="col-md-11">
                            {{ form_widget(form.description) }}
                            <div class="form-error">
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1">
                            {{ form_label(form.validUntil) }}
                        </div>
                        <div class="col-md-11">
                            <div style="display: flex; align-items: center;">
                                {{ form_widget(form.validUntil.date, { attr: { class: 'form-control' } }) }}
                                {{ form_widget(form.validUntil.time, { attr: { class: 'form-control' } }) }}
                            </div>
                            <div class="form-error">
                                {{ form_errors(form.validUntil) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <div class="col-md-11 pl-5">
                            {{ form_widget(form.isHidden) }}
                            {{ form_label(form.isHidden) }}
                            <div class="form-error">
                                {{ form_errors(form.isHidden) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <div class="col-md-11 pl-5">
                            {{ form_widget(form.isDeleted) }}
                            {{ form_label(form.isDeleted) }}
                            <div class="form-error">
                                {{ form_errors(form.isDeleted) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <div class="col-md-11 pl-5">
                            {% if saleCollection.id %}
                                <div id="app">
                                    <app></app>
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    To add the product, save your changes.
                                </div>
                            {% endif %}

                        </div>
                    </div>

                    <hr/>
                    {% include 'admin/embed/card/_form_buttons.html.twig' with {
                        'entity': saleCollection
                    }  %}
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>

    </div>

    {% if saleCollection.id %}
        {% include 'admin/embed/utils/_modal.html.twig' with {
            'id': 'approveDeleteModal',
            'title': 'Are you sure?',
            'text': 'Sale collection will be deleted.',
            'actionUrl': path('admin_sale_collection_delete', {'id': saleCollection.id}),
            'btnText': 'Delete row'
        } %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script>
        window.staticStore = {}
        window.staticStore.categories = JSON.parse('{{ categories|json_encode|raw }}')
        window.staticStore.saleCollectionId = "{{ saleCollection.id }}"
        window.staticStore.urlProductView = "{{ path('admin_product_edit_blank') }}"
        window.staticStore.urlGetProductsByCategory = "{{ path('admin_sale_collection_get_products_by_category') }}"
        window.staticStore.urlGetProductsBySaleCollection = "{{ path('admin_sale_collection_add_products_by_sale_collection') }}"
        window.staticStore.urlAddProductToSaleCollection = "{{ path('admin_sale_collection_add_product_to_sale_collection') }}"
        window.staticStore.urlRemoveProductFromSaleCollection = "{{ path('admin_sale_collection_remove_product_from_sale_collection') }}"
    </script>
    {{ encore_entry_script_tags('appAdminSaleCollection') }}
{% endblock %}
