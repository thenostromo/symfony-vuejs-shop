<div style="display: flex; justify-content: space-between; align-items: center;">
    <div>
        {% if app.request.headers.get('referer') %}
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-default btn-return">
                <i class="fas fa-arrow-circle-left"></i>
            </a>
        {% endif %}
        <button type="submit" class="btn btn-primary">
            Save changes
        </button>
    </div>
    {% if entity %}
        <a class="btn btn-white" data-toggle="modal" data-target="#approveDeleteModal">
            <i class="fas fa-times fa-sm"></i> Delete row
        </a>
    {% endif %}
</div>