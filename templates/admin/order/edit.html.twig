{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}Edit Order{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('appAdminOrder') }}
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                {% include 'admin/embed/card/_breadcrumbs.html.twig' with {
                    'sectionTitle': 'Orders',
                    'actionUrl': path('admin_order_list'),
                    'entity': order
                } %}
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group row">
                    <div class="col-md-1">
                        Id:
                    </div>
                    <div class="col-md-11">
                        {{ order.id }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-1">
                        Created at:
                    </div>
                    <div class="col-md-11">
                        {{ order.createdAt|date('H:i:s d/m/Y') }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-1">
                        Changed at:
                    </div>
                    <div class="col-md-11">
                        {{ order.changedAt|date('H:i:s d/m/Y') }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-1">
                        {{ form_label(form.owner) }}
                    </div>
                    <div class="col-md-11">
                        {{ form_widget(form.owner) }}
                        <div class="form-error">
                            {{ form_errors(form.owner) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-1">
                        {{ form_label(form.status) }}
                    </div>
                    <div class="col-md-11">
                        {{ form_widget(form.status) }}
                        <div class="form-error">
                            {{ form_errors(form.status) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-1">
                        {{ form_label(form.promoCode) }}
                    </div>
                    <div class="col-md-11">
                        {{ form_widget(form.promoCode) }}
                        <div class="form-error">
                            {{ form_errors(form.promoCode) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-1"></div>
                    <div class="col-md-11 pl-5">
                        {% if order.id %}
                            <div id="app">
                                <app></app>
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                To add the product, save your changes.
                            </div>
                        {% endif %}

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-1 font-weight-bold">
                        Total price:
                    </div>
                    <div class="col-md-11 font-weight-bold">
                        ${{ order.totalPrice }}
                    </div>
                </div>
                <hr/>
                {% include 'admin/embed/card/_form_buttons.html.twig' with {
                    'entity': order
                }  %}
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>

    </div>

    {% if order.id %}
        {% include 'admin/embed/utils/_modal.html.twig' with {
            'id': 'approveDeleteModal',
            'title': 'Are you sure?',
            'text': 'Category will be deleted.',
            'actionUrl': path('admin_order_delete', {'id': order.id}),
            'btnText': 'Delete row'
        } %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script>
        window.staticStore = {}
        window.staticStore.categories = JSON.parse('{{ categories|json_encode|raw }}')
        window.staticStore.orderId = "{{ order.id }}"
        window.staticStore.urlProductView = "{{ path('admin_product_edit_blank') }}"
        window.staticStore.urlGetProductsByCategory = "{{ path('admin_order_get_products_by_category') }}"
        window.staticStore.urlGetProductsByOrder = "{{ path('admin_order_add_products_by_order') }}"
        window.staticStore.urlAddProductToOrder = "{{ path('admin_order_add_product_to_order') }}"
        window.staticStore.urlRemoveProductFromOrder = "{{ path('admin_order_remove_product_from_order') }}"
    </script>
    {{ encore_entry_script_tags('appAdminOrder') }}
{% endblock %}
