{% include 'admin/embed/filters/_toggle_filters_btn.html.twig' with {
    'toggleFiltersBtnId': 'order_list_filters_btn'
} %}
<div id="order_list_filters_block" style="display: none">
    {{ form_start(form) }}
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Filter</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    {{ form_label(form.id) }}
                </td>
                <td>
                    {{ form_widget(form.id) }}
                    <div class="form-error">
                        {{ form_errors(form.id) }}
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.owner) }}
                </td>
                <td>
                    {{ form_widget(form.owner) }}
                    <div class="form-error">
                        {{ form_errors(form.owner) }}
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.status) }}
                </td>
                <td>
                    {{ form_widget(form.status) }}
                    <div class="form-error">
                        {{ form_errors(form.status) }}
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.totalPrice) }}
                </td>
                <td>
                    {{ form_widget(form.totalPrice) }}
                    <div class="form-error">
                        {{ form_errors(form.totalPrice) }}
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.createdAt) }}
                </td>
                <td>
                    {{ form_widget(form.createdAt) }}
                    <div class="form-error">
                        {{ form_errors(form.createdAt) }}
                    </div>
                </td>
            </tr>
            </tbody>
            <tfoot>
            <tr>
                <td colspan="2">
                    {% include 'admin/embed/filters/_filters_table_actions_btn.html.twig' %}
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
    {{ form_end(form) }}
</div>

