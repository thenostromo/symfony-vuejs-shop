<div class="products mb-3">
    <div class="row justify-content-center align-items-center">
        {% for product in productsModel %}

            {% if count <= 4 %}
                <div class="col-6 col-md-4 col-lg-4 col-xl-3">
            {% elseif count > 4 %}
                    <div class="col-5 col-md-3 col-lg-3 col-xl-2">
            {% endif %}
                <div class="product text-center">
                    <div class="product-content">
                        <figure class="product-media">
                            <span class="product-label label-new">New</span>
                            <a href="{{ path('product_show', {id: product.id}) }}">
                                {% for image in product.images %}
                                    <img src="{{ asset('uploads/images/products/' ~ product.id ~ '/' ~ image.getFilenameMiddle()) }}"
                                         alt="{{ product.title }}"
                                         class="product-image">
                                {% endfor %}
                            </a>

                            <div class="product-action">
                                <a onclick="addProductToCart({{ product.id }})" href="#" class="btn-product btn-cart"><span>add to cart</span></a>
                            </div><!-- End .product-action -->
                        </figure><!-- End .product-media -->

                        <div class="product-body">
                            <h3 class="product-title"><a href="product.html">{{ product.title }}</a></h3><!-- End .product-title -->
                            <div class="product-price">
                                ${{ product.price }}
                            </div><!-- End .product-price -->
                        </div><!-- End .product-body -->
                    </div>
                </div><!-- End .product -->
            </div><!-- End .col-sm-6 col-lg-4 col-xl-3 -->

        {% endfor %}
    </div><!-- End .row -->
</div>
