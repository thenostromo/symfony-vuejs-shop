<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
        <title>{% block title %}RankedChoice - Shop Of Best Clothes{% endblock %}</title>
        <meta name="keywords" content="{% block page_keywords %}clothes, jackets, jeans{% endblock %}">
        <meta name="description" content="{% block page_description %}clothes, jackets, jeans{% endblock %}">
        <link rel="icon" type="image/x-icon" href="{{ asset('build/images/icons/favicon.ico') }}" />
        {{ encore_entry_link_tags('section-main') }}
        {% block stylesheets %}{% endblock %}
    </head>

    <body>
        {% set ROUTE_NAME = app.request.attributes.get('_route') %}
        <div class="page-wrapper">
            {{ render(controller('App\\Controller\\Main\\EmbedController::saleCollectionHeader')) }}

            {{ include('main/_embed/_header.html.twig') }}

            <main class="main">
                {% include 'main/_embed/_flash_message.html.twig' %}

                {% block body %}
                {% endblock %}
            </main>

            {{ render(controller('App\\Controller\\Main\\EmbedController::footer')) }}
        </div>

        {{ encore_entry_script_tags('section-main') }}
        {% block javascripts %}{% endblock %}
    </body>
</html>
